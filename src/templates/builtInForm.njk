{% macro registrationForm(instructions, formConfig, countries) %}
<div>
    <div class="wb-congratulation wb-after-registration">
        <h2 class="wb-congratulation__title">
            Thank you for the registration
        </h2>
        <div class="wb-congratulation__p">
            The facilitator will contact you soon to provide more info on payment and other formalities.
        </div>
    </div>

    <form action="#" class="wb-form wb-before-registration" data-widget-form>
        <div class="wb-form__body">
            <div class="wb-form__title">Register for the event</div>
            <div class="wb-form__instructions">{{ instructions }}</div>
            {% from "./field.njk" import formField %}
            {% for section in formConfig %}
                {% if section.name %}
                    <div class="wb-form__section-title">{{ section.name }}</div>
                {% endif %}
                {% for field in section.fields %}
                    {{ formField(field, countries) }}
                {% endfor %}
            {% endfor %}

            <button data-widget-submit type="submit" class="btn btn-primary wb-form__btn">
                Register
            </button>
        </div>
    </form>
</div>
{% endmacro %}
