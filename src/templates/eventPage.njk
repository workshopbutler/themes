<div class="wb-content">
    <div class="wb-page">
        <div class="wb-header wb-center">
            <h1>{{ event.title }}</h1>
        </div>
        <div class="wb-body wb-center">
            <div class="wb-right-col">
                <div>
                    {% if event.registration.isClosed() %}
                        <button class="wb-sidebar__register" disabled>{{ event.getReasonForClosedRegistration() }}</button>
                    {% else %}
                        <a href="#" target="_blank" data-registration-button
                                {% if event.tickets.getActiveTicketId() %}
                                    data-ticket-id="{{ event.tickets.getActiveTicketId() }}"
                                {% endif %}
                           class="wb-sidebar__register">Register Now</a>
                    {% endif %}
                </div>
                <div class="wb-info">
                    <div class="wb-info__title">Date:</div>
                    {{ event.schedule }}
                    {#<div class="wb-info__footer">{{ formatDate(event.start) }}</div>#}
                </div>
                <div class="wb-info">
                    <div class="wb-info__title">Location:</div>
                    {{ event.location }}
                    <div class="wb-info__footer">{{ formatLanguages(event) }}</div>
                </div>
                {% if event.tickets.nonEmpty() %}
                    <div class="wb-tickets wb-info">
                        {% if event.free %}
                            <div class="wb-ticket">
                                <div class="wb-ticket__val">
                                    Free
                                </div>
                                <div class="wb-ticket__footer">
                                    {{ formatTicketState(event.tickets.free, false) }}
                                </div>
                            </div>
                        {% else %}
                            {% for ticket in event.tickets.paid %}
                                <div class="wb-ticket {% if not ticket.isActive() %} state-closed {% endif %}">
                                    <div class="wb-ticket__val">
                                        {{ formatPrice(ticket.price, ticket.withVAT) }}
                                    </div>
                                    <div class="wb-ticket__name">
                                        {{ ticket.name }}
                                    </div>
                                    <div class="wb-ticket__desc">
                                        {{ formatTicketDescription(ticket) }}
                                    </div>
                                    <div class="wb-ticket__footer">
                                        {{ formatTicketState(ticket, true) }}
                                    </div>
                                </div>
                            {% endfor %}
                        {% endif %}
                    </div>
                {% endif %}
                <div class="wb-workshops" id="upcoming-events">
                    <div class="wb-workshops__title">
                        Upcoming events:
                    </div>
                    <div data-events-list></div>
                </div>
                {% from "./event/share.njk" import shareEvent %}
                {{ shareEvent(event) }}
            </div>
            <div class="wb-left-col">
                {% if event.description %}
                    <div class="wb-desc">{{ event.description | safe }}</div>
                {% endif %}
                {% if options.withTrainers %}
                    <div class="wb-trainers">
                        {% for trainer in event.trainers %}
                            <div class="wb-trainer">
                                <div class="wb-profile">
                                    {% set url = options.trainerPageUrl + '?id=' + trainer.id %}
                                    {% set photo = "background-image: url(" + trainer.photo + ");" %}
                                    <a class="wb-profile_img" href="{{ url }}" style="{{ photo }}"></a>
                                    <div class="wb-profile__name">
                                        <div class="inner">
                                            <h3>
                                                {{ trainer.firstName }}
                                                <br/>
                                                {{ trainer.lastName }}
                                            </h3>
                                        </div>
                                    </div>
                                </div>
                                {% if trainer.bio %}
                                    <div class="wb-profile__text b-flip js-text-flip" data-max-height="80">
                                        <div class="b-flip__inner" data-flip-helper>
                                            {{ trainer.bio | safe }}
                                        </div>
                                        <a href="#" class="b-flip__link" data-flip-link>
                                            <span class="b-flip__show">Show bio</span>
                                            <span class="b-flip__hide">Hide</span>
                                        </a>
                                    </div>
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}

                {% from "./builtInForm.njk" import registrationForm %}
                <div data-registration-form>
                    {{ registrationForm(event.instructions, event.registrationForm, countries) }}
                </div>

            </div>
        </div>
    </div>
</div>
