{% macro drawEvent(event) %}
    <div class="wb-tile" data-event-obj data-event-type="{{ event.type.id }}"
         data-event-location="{{ event.country }}"
         data-event-language="{{ event.spokenLanguages | join(',') }}"
         data-event-trainer="{{ event.trainers | join(',') }}">
        <a data-widget-go href="{{ event.url }}" class="wb-tile-title">{{ event.title }}</a>
        <div class="wb-tile-info">
            {{ event.schedule }}
            {% if event.free %}
                <div class="wb-tile-free">free</div>
            {% endif %}
            <br/>
            {{ event.location }}
        </div>
        <div class="wb-tile-content">{{ event.description | safe }}</div>
        <div class="wb-tile-button">
            <a data-widget-go href="{{ event.url }}" class="wb-btn wb-btn-primary wb-tile-btn">
                {% if event.soldOut %}
                    Sold Out
                {% else %}
                    Register
                {% endif %}
            </a>
        </div>
    </div>
{% endmacro %}
